<p id="notice"><%= notice %></p>

<h1>Recipes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Difficulty</th>
      <th>Serves</th>
      <th>Category</th>
      <th>Image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.name %></td>
        <td><%= recipe.difficulty %></td>
        <td><%= recipe.serves %></td>
        <td><%= recipe.category_id ? recipe.category.name: "" %></td>
        <% if( recipe.image_url )%>
        <td><%= image_tag( recipe.image_url, {height:150, width:175} ) %></td>
        <td></td>
        <% end %> 
        <td><%= recipe.featured %></td>
        <td><%= recipe.ingredients_link %></td>
        <td><%= link_to 'Show', recipe %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
        <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recipe', new_recipe_path %>
